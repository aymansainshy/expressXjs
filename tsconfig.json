{
  "compilerOptions": {
    "target": "ES2021",
    /* Decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    /* Modules */
    "module": "Node16",
    "moduleResolution": "node16",
    /* Build */
    "rootDir": "src",
    "outDir": "dist",
    /* Types */
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  // "include": [
  //   "src"
  // ]
}